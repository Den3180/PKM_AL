<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <!-- Add Controls for Previewer Here -->
        </Border>
    </Design.PreviewWith>
    
    <Style Selector="Button">
        <Setter Property="Background" Value="MediumBlue" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <Style Selector="Button:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="DarkBlue" />
    </Style>

    <Style Selector="Button:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="Purple" />
    </Style>

    <Style Selector="Button:pointerover AccessText">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Effect">
            <DropShadowEffect BlurRadius="40" Color="Black" OffsetX="5" OffsetY="5" />
        </Setter>
    </Style>

    <Style Selector="Button.Style1:pressed AccessText">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Effect">
            <DropShadowEffect BlurRadius="5" Color="Black" OffsetX="2" OffsetY="2" />
        </Setter>
    </Style>
    
</Styles>
