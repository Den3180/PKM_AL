<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"		
        x:Class="PKM_AL.WindowMassage"
        WindowStartupLocation="CenterScreen" SystemDecorations="BorderOnly" SizeToContent="WidthAndHeight">
	<Grid RowDefinitions="auto,auto">		
	<TextBlock Grid.Row="0" Name="Message" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14" Margin="10">
		<TextBlock.Text>
			Тестовая запись
		</TextBlock.Text>
	</TextBlock>
		<StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
			<Button Content="Отмена" MinWidth="70" HorizontalContentAlignment="Center" Margin="5" Click="Button_Click"/>
			<Button Content="Да" MinWidth="70" HorizontalContentAlignment="Center" Margin="5" Click="Button_Click"/>
		</StackPanel>
	</Grid>
</Window>
