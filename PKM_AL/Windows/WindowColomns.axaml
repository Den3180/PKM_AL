<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="PKM_AL.Windows.WindowColomns"
        Title="Столбцы" Height="300" Width="400" WindowStartupLocation="CenterScreen"
        CanResize="False" ShowInTaskbar="False">
    <Border Margin="5" BorderBrush="LightGray" BorderThickness="2">
    <Grid Margin="10" RowDefinitions="*,100">
      <ListBox Name="lstColumns" Margin="5">
          <CheckBox Content="Столбец 1" Name="Column1"/>
          <CheckBox Content="Столбец 2" Name="Column2"/>
          <CheckBox Content="Столбец 3" Name="Column3"/>
      </ListBox>
      <Button Grid.Row="1" Content="Сохранить" Height="30" Width="100"
              HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="Button_Click"/>
  </Grid>
    </Border>
</Window>
