<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="PKM_AL.Windows.WindowDeviceToArchive"
        Title="Сохранение архива" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen"
        Loaded="Control_OnLoaded">
        <StackPanel Orientation="Vertical" Margin="10">
                <TextBlock Text="Принадлежность архива" VerticalAlignment="Center" 
                           HorizontalAlignment="Center" FontWeight="SemiBold"/>
                <StackPanel Orientation="Horizontal">            
                        <TextBlock Text="Устройство: " VerticalAlignment="Center" FontWeight="SemiBold"/>
                        <ComboBox Name="devCombo" Margin="10" Width="100"/>
                </StackPanel>
                <Button Content="Применить" Margin="10" Width="100" Click="Button_Click"/>
        </StackPanel>
</Window>
